server {
    listen 80 default_server;
    server_name localhost;

    location / {
        include proxy_params;
        proxy_pass http://dev_web;
    }
}

server {
    listen 80;
    server_name mailer.localhost;

    location / {
        include proxy_params;
        proxy_pass http://dev_mailer;
    }
}

server {
    listen 80;
    server_name mysql.localhost;

    location / {
        include proxy_params;
        proxy_pass http://dev_phpmyadmin;
    }
}